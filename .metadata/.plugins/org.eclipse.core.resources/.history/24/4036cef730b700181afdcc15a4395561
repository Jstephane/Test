
public class ExoWhileBoucle {

	public static void main(String[] args) {


		int Nombre =1;
		while (Nombre <101 ) {
			System.out.println("Nombre = " + Nombre);
			Nombre++;
		} 
		
	
		
	 int Nombre2 = 100;
     while (Nombre2 >= 1 ) {
			System.out.println("Nombre2 = " + Nombre2);
			Nombre2--;
		}
		
     
     int NombrePaire=0;
     NombrePaire = NombrePaire + 2;
     while (NombrePaire < 102 ) {
			System.out.println("NombrePaire = " + NombrePaire);
			NombrePaire = NombrePaire + 2;
     
	}
     
     
     

		int NombrePaire2=0;
NombrePaire2 = NombrePaire2 + 2;
while (NombrePaire2 <= 2) {
		System.out.println("NombrePaire2 = " + NombrePaire2);
		
	}
}
	
}


	
	


