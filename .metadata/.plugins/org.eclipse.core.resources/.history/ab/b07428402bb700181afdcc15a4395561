
public class ExoWhileBoucle {

	public static void main(String[] args) {


		int Nombre =1;
		while (Nombre <101 ) {
			System.out.println("Nombre = " + Nombre);
			Nombre++;
		} 
		
	
		
	 int Nombre2 = 1;
     while (Nombre2 <= 100 ) {
			System.out.println("Nombre2 = " + Nombre2);
			Nombre--;
		}
		
	}

}
	


	
	


