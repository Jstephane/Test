
public class ExoWhileBoucle {

	public static void main(String[] args) {


		int Nombre =1;
		while (Nombre <101 ) {
			System.out.println("Nombre = " + Nombre);
			Nombre++;
		} 



		int Nombre2 = 100;
		while (Nombre2 >= 1 ) {
			System.out.println("Nombre2 = " + Nombre2);
			Nombre2--;
		}


		int NombrePaire=0;
		NombrePaire = NombrePaire + 2;
		while (NombrePaire < 102 ) {
			System.out.println("NombrePaire = " + NombrePaire);
			NombrePaire = NombrePaire + 2;

		}

		int VariableX=1;
		int VariableY=100;

		while (VariableX <=100 && VariableY>= 1 ) {
			System.out.println("VariableX = " + VariableX       +     "    VariableY =" + VariableY);
			VariableX++;
			VariableY--; }
		VariableY--;	
	} 

















	 for ( Nombreimpair= 1 ; Nombreimpair <=101 ; Nombreimpair= Nombreimpair + 2 )
	 {
	 System.out.println("Nombreimpair = "    );
	 
	 }
}
	
}

	
	
	











